    print(match_result(10, 2));
    print(match_result(10, 0));
    
    print("\n=== Option Matching ===");
    let arr = [1, 2, 3, 4, 5];
    print(match_option(arr, 3));
    print(match_option(arr, 99));
    
    print("\n=== Try Demo ===");
    print(try_demo());
    
    return 0;
}
